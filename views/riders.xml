<openerp>
	<data>





<!-- FORM --> 
		<record model="ir.ui.view" id="rider_form_view">

			<field name="name">rider.form</field>

			<field name="model">datascience.rider</field>
			
			<field name="priority" eval="1"/>

			<field name="arch" type="xml">
			
				<form string="rider Form">
			
			
					<header>

						<!-- Import --> 
						<button 
							type="object" 
							class="oe_highlight"
							
							name="import_data" 
							
							string="Import Data"                 
						/>



						<!-- Clear --> 
						<button 
							type="object" 
							class="oe_highlight oe_right"

							name="clear"              
							
							string="Clear"                
						/>

					</header>




					<!-- Sheet -->  
					<sheet>

						<group>
							<group>               
								<field name="name"/>
							</group>
							
							<group>               
<!--
-->
								<field name="file_name"/>

								<field name="max_import"/>
							</group>
						</group>

						<group>
							<group>               
								<field name="date_begin"/>
								<field name="date_end"/>
							</group>
							<group>
<!--
-->
								<field name="count"/>
							</group>
						</group>


						<!-- Padding -->
						<group>
							<group></group>
							<group></group>
						</group>




						<!-- Notebook --> 
						<notebook>
							
							<page string="Lines">
<!--
-->						
								<field name="rider_line"/>
							</page>


						</notebook>
					</sheet>
				</form>
			</field>
		</record>
